<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Biliardo.App.Componenti_UI.UserAvatarView"
             x:Name="ThisView">

    <Grid WidthRequest="{Binding Size, Source={x:Reference ThisView}}"
          HeightRequest="{Binding Size, Source={x:Reference ThisView}}">
        <Border Stroke="#2B2B2B"
                StrokeThickness="1"
                BackgroundColor="#1A1A1A">
            <Border.StrokeShape>
                <Ellipse />
            </Border.StrokeShape>

            <Grid>
                <Image x:Name="AvatarImage"
                       Aspect="AspectFill"
                       IsVisible="{Binding HasImage, Source={x:Reference ThisView}}" />
                <Label Text="{Binding Initials, Source={x:Reference ThisView}}"
                       IsVisible="{Binding HasInitials, Source={x:Reference ThisView}}"
                       TextColor="White"
                       FontAttributes="Bold"
                       HorizontalTextAlignment="Center"
                       VerticalTextAlignment="Center" />
            </Grid>
        </Border>
    </Grid>
</ContentView>
