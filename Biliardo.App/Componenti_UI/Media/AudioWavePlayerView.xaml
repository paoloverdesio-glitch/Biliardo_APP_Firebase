<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Biliardo.App.Componenti_UI.Media.AudioWavePlayerView"
             x:Name="ThisView">
    <Border Stroke="#2B2B2B"
            StrokeThickness="1"
            BackgroundColor="#1A1A1A"
            Padding="8">
        <Border.StrokeShape>
            <RoundRectangle CornerRadius="12" />
        </Border.StrokeShape>
        <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto" ColumnSpacing="10" RowSpacing="4">
            <Button x:Name="PlayButton"
                    Grid.RowSpan="2"
                    Text="â–¶"
                    BackgroundColor="#2A2A2A"
                    TextColor="White"
                    FontSize="18"
                    Clicked="OnPlayClicked"
                    WidthRequest="44"
                    HeightRequest="44"
                    CornerRadius="22" />
            <GraphicsView x:Name="WaveView"
                          Grid.Column="1"
                          HeightRequest="40" />
            <Label Grid.Row="1"
                   Grid.Column="1"
                   Text="{Binding DurationLabel, Source={x:Reference ThisView}}"
                   TextColor="White"
                   FontSize="12"
                   Opacity="0.7" />
        </Grid>
    </Border>
</ContentView>
