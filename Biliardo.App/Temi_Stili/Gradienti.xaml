<?xml version="1.0" encoding="utf-8"?>
<?xaml-comp compile="true" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- [1] Gradiente panno verde (diagonale TL->BR) -->
    <LinearGradientBrush x:Key="Sfondo_PannoVerde_Gradiente" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#0A5F2A" Offset="0" />
        <GradientStop Color="#1E7A34" Offset="0.55" />
        <GradientStop Color="#2FAF48" Offset="1" />
    </LinearGradientBrush>

    <!-- [2] Variante più chiara (top->bottom) -->
    <LinearGradientBrush x:Key="Sfondo_PannoVerde_Chiaro" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#1E7A34" Offset="0" />
        <GradientStop Color="#4FCB6B" Offset="1" />
    </LinearGradientBrush>

    <!-- [3] Alias richiesto dalla Home -->
    <LinearGradientBrush x:Key="Pennello_Sfondo_Home_TL_BR" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#0A5F2A" Offset="0" />
        <GradientStop Color="#1E7A34" Offset="0.55" />
        <GradientStop Color="#2FAF48" Offset="1" />
    </LinearGradientBrush>

</ResourceDictionary>
