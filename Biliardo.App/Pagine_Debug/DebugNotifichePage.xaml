<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Biliardo.App.Pagine_Debug.DebugNotifichePage"
             Title="Debug notifiche FCM">

    <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="8">

            <Label Text="Debug notifiche FCM"
                   FontSize="20"
                   FontAttributes="Bold" />

            <Label Text="Debug notifiche / FCM"
                   FontSize="16" />

            <Button Text="Leggi token FCM"
                    Clicked="OnLeggiTokenClicked" />

            <Button Text="Simula NotificationReceived"
                    Clicked="OnSimulaNotificationReceivedClicked" />

            <Button Text="Simula NotificationTapped"
                    Clicked="OnSimulaNotificationTappedClicked" />

            <Button Text="Pulisci log"
                    Clicked="OnPulisciLogClicked" />

            <Label x:Name="LblOutput"
                   FontSize="12"
                   LineBreakMode="WordWrap"
                   TextColor="White" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
